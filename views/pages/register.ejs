<%- include('../partials/_head') -%>
<body id="register-cover">
<h3 class="text-center text-white py-2">To have account in our bank, Please register</h3>
    <div class="reg-form mx-auto p-2">
        <form action="/api/bank/createUser" method="POST" enctype="multipart/form-data" class="pt-4 mx-auto">
          <div class="mb-1 row">
              <label class="form-label col-md-4 col-form-label" for="first_name">First Name</label>
              <input class="col-md-8" type="text" name="first_name" placeholder="Enter first name" required />
          </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="middle_name">Middle Name</label>
            <input class="col-md-8" type="text" name="middle_name" placeholder="Enter middle name" />
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="last_name">Last Name</label>
            <input class="col-md-8" type="text" name="last_name" placeholder="Enter last name" required />
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="username">Username</label>
            <input class="col-md-8" type="text" name="username" placeholder="Enter username" required />
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="password">Password</label>
            <input class="col-md-8" type="password" name="password" placeholder="Enter password" required />
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="email">Email</label>
            <input class="col-md-8" type="email" name="email" placeholder="Enter Email" required/>
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="address">Address</label>
            <input class="col-md-8" type="text" name="address" placeholder="Enter Address" required/>
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="phone_number">Phone Number</label>
            <input class="col-md-8" type="text" name="phone_number" placeholder="Enter Phone Number" required/>
        </div>
        <div class="mb-1 row">
            <label class="form-label col-md-4 col-form-label" for="image">Select Profile Image</label>
            <input class="col-md-8" type="file" name="image"  required/>
        </div>
        <div class="d-flex justify-content-end">
            <input class="px-5" type="submit" name="submit" value="Register" />
        </div>
        </form>
    </div>
    <br>
      <div class="reg-link mx-auto d-flex justify-content-center">
        <a class="btn btn-primary py-1 px-3" href="/api/bank/login">login</a>
        <a class="btn btn-primary p-1 px-3" href="/api/bank">Cover</a>
        <%- include('../partials/_footer') -%>
      </div>
</body>
</html>