<%- include('../partials/_head') -%>
    <body id="trans-cover">
        <%- include('../partials/_nav') -%>
            <h3 class="text-center mx-auto text-white btn-secondary action-btn">Make Transfer</h3>
            <div class="reg-form mx-auto">
                <form action="/api/transaction/transfer" method="POST" class="pt-4 mx-auto" id="action-form">
                    <div class="mb-1 row">
                        <label class="form-label col-md-4 col-form-label" for="send_acc">Sender Acc Number</label>
                        <input class="col-md-8" type="text" name="send_acc"
                            placeholder="Your phone number is your account number" required />
                    </div>
                    <div class="mb-1 row">
                        <label class="form-label col-md-4 col-form-label" for="rec_acc">Receiver Acc Number</label>
                        <input class="col-md-8" type="text" name="rec_acc" placeholder="Your phone number is your account number"
                            required />
                    </div>
                    <div class="mb-1 row">
                        <label class="form-label col-md-4 col-form-label" for="amount">Amount</label>
                        <input class="col-md-8" type="number" name="amount" placeholder="Enter amount" required />
                    </div>
                    <div class="mb-1 row">
                        <label class="form-label col-md-4 col-form-label" for="description">Description</label>
                        <input class="col-md-8" type="text" name="description" placeholder="Enter description"
                            required />
                    </div>
                    <div class="mb-1 row">
                        <label class="form-label col-md-4 col-form-label" for="comment">Comment</label>
                        <input class="col-md-8" type="text" name="comment" placeholder="Enter coment" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <input id="actionBtn" class="px-5" type="submit" name="submit" value="Submit" />
                    </div>
                </form>
            </div>
            <br>
            <script src="/script/main.js"></script>
            <%- include('../partials/_footer') -%>
    </body>
    </html>